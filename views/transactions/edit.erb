<p>Edit Existing Transaction</p>



a href="/transactions">return to index</a>

<form action="/transactions  / = <%= @transaction.id %>"  method="post">

<label for="transaction-name">Edit Transaction </label>
<input type="text" name="name" id="transaction-name" value="<%= @transaction.name">

<label for="transaction-amount">Edit Transaction Amount</label>
<input type="number" name="name" id="transaction-amount" value="<%= @transaction.amount%>">


<select name = "merchant_id" >
  <% for merchant in @merchant %>
  <option value ="<%= merchant.id %>">
    <%= merchant.name %>
  </option>
  <% end %>

<select name = "tag_id" >
    <% for tag in @tags %>
    <option value ="<%= tag.id %>">
      <%= tags.name %>
    </option>
    <% end %>

</select>

<input type="submit" value="Add transaction">

</form>
