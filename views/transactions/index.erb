<h2>Transactions</h2>


  <a href="/transactions/new">Add Transaction</a>


  <% @transactions.each do |transaction| %>

  <p><%= transaction.amount %></p>
  <p><%= transaction.tag.name %></p>
  <p><%= transaction.merchant.name %></p>



  <form action="/transactions/<%= transaction.id %>/delete" method="POST"><input type="submit" value="Delete"></form>>
  <a href="/transactions/<%= transaction.id %>/edit">Edit</a>

  <% end %>
